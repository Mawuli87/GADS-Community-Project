<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    app:cardElevation="10dp"
    android:padding="10dp"
    android:layout_margin="10dp"
    tools:context=".PaymentActivity"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/content_card" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Name"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/porder_name"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price :"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/porder_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:text="Price"
                android:textColor="@color/md_pink_900"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity :"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/porder_qty"
                android:text="Qty"
                android:textSize="14sp"
                android:textColor="@color/md_pink_500"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"/>



        </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total :"
                        android:textColor="@color/design_default_color_on_secondary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/porder_total"
                        android:layout_weight="1"
                        android:text="Amount"
                        android:textSize="16sp"
                        android:textColor="@color/md_pink_900"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


    </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:id="@+id/sendOrder"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:bufferType="normal"
            android:clickable="false"
            android:cursorVisible="true"
            android:text="Pay"
            android:textAllCaps="false"
            android:textColor="@color/CTA_text" />

    </LinearLayout>
</androidx.cardview.widget.CardView>